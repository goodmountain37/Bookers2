<div class="row">
  <%= render 'layouts/sidemenu' %>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %> 
          <% if book.user_id == @user.id %>
            <tr>
              <td></td>
              <td>
                <%= link_to "#{book.title}", book_path(book.id) %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody> 
    </table>
  </div>
</div>