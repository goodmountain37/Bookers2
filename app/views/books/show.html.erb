<div class="row">
  <%= render 'layouts/sidemenu' %>

  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag @book.user, :image, :fill, 40, 40, class: "attachment user image", fallback: "no_image.jpg", size: '40x40' %><br>
            <%= link_to "#{@book.user.name}",user_path(@user) %>
          </td>
          <td>
            <%= link_to "#{@book.title}", book_path(@book.id) %>
          </td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn-sm btn-danger" %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>